<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3F51B5"
    tools:context=".nom_datos">

    <TextView
        android:id="@+id/tituloCod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="Código"
        android:textColor="#FFFFFF"
        android:textSize="24dp"
        android:textStyle="bold"></TextView>

    <TextView
        android:id="@+id/idNom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tituloCod"
        android:text="id"
        android:textColor="#3F51B5">
    </TextView>

    <EditText
        android:id="@+id/codigoNom"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/tituloCod"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bordes"
        android:hint="Código"
        android:padding="10dp"
        android:textColorHint="#80FFFFFF"></EditText>

    <TextView
        android:id="@+id/tituloNom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/codigoNom"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="Nombre"
        android:textColor="#FFFFFF"
        android:textSize="24dp"
        android:textStyle="bold">
    </TextView>

    <EditText
        android:id="@+id/nombreNom"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/tituloNom"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bordes"
        android:padding="10dp"
        android:hint="Nombre"
        android:textColorHint="#80FFFFFF">
    </EditText>

    <TextView
        android:id="@+id/tituloForm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nombreNom"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="Formulario"
        android:textColor="#FFFFFF"
        android:textSize="24dp"
        android:textStyle="bold"></TextView>

    <EditText
        android:id="@+id/formNom"
        android:layout_width="360dp"
        android:layout_height="320dp"
        android:layout_below="@+id/tituloForm"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bordes"
        android:gravity="top|start"
        android:inputType="textMultiLine"
        android:maxLines="5"
        android:padding="10dp"
        android:scrollbars="vertical"
        android:hint="Formulario"
        android:textColorHint="#80FFFFFF">
    </EditText>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_below="@+id/formNom"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/modificar_nom"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_below="@+id/formNom"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_margin="10dp"
            android:backgroundTint="#FFEB3B"
            android:onClick="modificarN"
            android:text="Modificar"
            android:textColor="#000000"
            app:cornerRadius="7dp"></Button>

        <Button
            android:id="@+id/eliminar_nom"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_below="@+id/formNom"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_margin="10dp"
            android:layout_toRightOf="@id/modificar_nom"
            android:backgroundTint="#F44336"
            android:onClick="eliminarN"
            android:text="Eliminar"
            android:textColor="#FFFFFF"
            app:cornerRadius="7dp"></Button>
    </LinearLayout>
</RelativeLayout>