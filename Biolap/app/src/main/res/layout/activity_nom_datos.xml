<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#22C55E"
    tools:context=".nom_datos">
    <TextView
        android:id="@+id/tituloCod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textSize="34dp"
        android:text="Código"
        android:textStyle="bold"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp">
    </TextView>
    <TextView
        android:id="@+id/idNom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:text="id"
        android:layout_toRightOf="@id/tituloCod">
    </TextView>

    <EditText
        android:id="@+id/codigoNom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tituloCod"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:background="@drawable/bordes"
        android:text="Código"
        android:textColor="#FFFFFF"
        android:textSize="24dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true">
    </EditText>
    <TextView
        android:id="@+id/tituloNom"
        android:layout_below="@+id/codigoNom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textSize="34dp"
        android:text="Nombre"
        android:textStyle="bold"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp">
    </TextView>

    <EditText
        android:id="@+id/nombreNom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tituloNom"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:background="@drawable/bordes"
        android:text="Nombre"
        android:textColor="#FFFFFF"
        android:textSize="24dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true">
    </EditText>

    <TextView
        android:id="@+id/tituloForm"
        android:layout_below="@+id/nombreNom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textSize="34dp"
        android:text="Formulario"
        android:textStyle="bold"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp">
    </TextView>

    <EditText
        android:id="@+id/formNom"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tituloForm"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:background="@drawable/bordes"
        android:text="Formulario"
        android:textColor="#FFFFFF"
        android:textSize="24dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:inputType="textMultiLine"
        android:gravity="top|start"
        android:maxLines="5"
        android:scrollbars="vertical">
    </EditText>


</RelativeLayout>